@{
    ViewData["Title"] = "Calendário de Férias";
    Layout = "_LayoutCollaborator";
}
<form style="display: none;">@Html.AntiForgeryToken()</form>

@section Styles {
    <style>
        /* --- VARIÁVEIS --- */
        :root {
            --black: #040605;
            --white: #f5f7f6;
            --blue-white: #e1e7e8;
            --pink: #fd588a;
            --tangerine: #f86a6c;
            --text-light: #888;
            --border-color: #eee;
        }

        /* --- ESTRUTURA PRINCIPAL --- */
        .calendar-contain {
            position: relative;
            width: 100%;
            background-color: var(--white);
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border-radius: 8px;
            display: flex;
            flex-direction: column;
            /* Altura dinâmica em mobile, fixa em desktop */
            min-height: 600px;
            overflow: hidden; /* Mantém o arredondamento */
        }

        @@media (min-width: 55em) {
            .calendar-contain {
                flex-direction: row;
                height: 85vh; /* Altura fixa no desktop */
            }
        }

        /* --- BARRA LATERAL (SIDEBAR) --- */
        .calendar__sidebar {
            width: 100%;
            background: linear-gradient(120deg, #eff3f4, #e1e7e8);
            padding: 2rem;
            border-right: 1px solid #ddd;
            flex-shrink: 0; /* Impede que a sidebar encolha */
        }

        @@media (min-width: 55em) {
            .calendar__sidebar {
                width: 320px; /* Largura fixa para a sidebar */
                height: 100%;
                overflow-y: auto; /* Scroll se a sidebar for muito alta */
            }
        }

        .sidebar__heading {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: var(--black);
            line-height: 1.2;
        }

            .sidebar__heading span {
                display: block;
                font-weight: 300;
                font-size: 1.1rem;
                color: var(--text-light);
                margin-top: 5px;
            }

        .info-bar {
            margin: 1.5rem 0;
            padding: 15px;
            background: white;
            border-radius: 8px;
            text-align: center;
            color: var(--black);
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .sidebar__list {
            list-style: none;
            padding: 0;
            margin-top: 2rem;
        }

        .sidebar__list-item {
            margin: 1rem 0;
            font-weight: 500;
            font-size: 0.95rem;
            color: #555;
            display: flex;
            align-items: center;
        }

        .list-item__dot {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 10px;
        }

        /* --- ÁREA DO CALENDÁRIO (DIREITA) --- */
        .calendar__days {
            width: 100%;
            background: var(--white);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
            /* CORREÇÃO DO SCROLL */
            overflow-y: auto; /* Permite scroll vertical nesta área */
            height: 100%;
        }

        /* Cabeçalho do Mês */
        .calendar__header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            flex-shrink: 0; /* O cabeçalho não deve encolher */
        }

        .month-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--black);
            text-transform: capitalize;
        }

        .nav-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-light);
            padding: 0 15px;
            transition: color 0.2s;
        }

            .nav-btn:hover {
                color: var(--pink);
            }

        /* Dias da Semana */
        .calendar__top-bar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            text-align: center;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--border-color);
            flex-shrink: 0; /* A barra dos dias não deve encolher */
        }

        .top-bar__days {
            color: var(--text-light);
            font-size: 0.85rem;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
        }

        /* Grelha dos Dias */
        .calendar__grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            /* CORREÇÃO: Ajuste automático das linhas */
            grid-auto-rows: minmax(100px, auto);
            gap: 1px;
            background-color: var(--border-color);
            border: 1px solid var(--border-color);
            /* Garante que desenha tudo */
            height: max-content;
            min-height: 100%;
            padding-bottom: 20px; /* Espaço extra no fim do scroll */
        }

        .calendar__day {
            background-color: var(--white);
            padding: 8px;
            display: flex;
            flex-direction: column;
            cursor: pointer;
            transition: background 0.2s;
            /* Permite que a célula cresça com o conteúdo */
            height: 100%;
            min-height: 100px;
        }

            .calendar__day:hover {
                background-color: #f9f9f9;
            }

            .calendar__day.inactive {
                background-color: #fbfbfb;
                pointer-events: none;
            }

            .calendar__day.today {
                background-color: #fff5f8;
            }

        .calendar__date {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--black);
            align-self: flex-end;
        }

        .calendar__day.inactive .calendar__date {
            color: #ddd;
        }

        .calendar__day.today .calendar__date {
            color: var(--pink);
        }

        /* Eventos */
        .calendar__task {
            font-size: 0.7rem;
            margin-bottom: 2px;
            padding: 3px 6px;
            border-radius: 4px;
            color: white;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            width: 100%;
            line-height: 1.2;
        }

        .task--empresa {
            background-color: #dc3545;
        }

        .task--individual {
            background-color: #0d6efd;
        }

    </style>
}

<main class="calendar-contain">

    <aside class="calendar__sidebar">
        <h2 class="sidebar__heading">
            SIGHR <br>
            <span>Gestão de Férias</span>
        </h2>

        <div class="info-bar">
            Saldo Disponível: <strong id="dias-restantes" style="color: var(--pink); font-size: 1.2rem;">...</strong> dias
        </div>

        <h4 style="margin-top: 30px; font-size: 1rem; font-weight: 600; color: #555;">Legenda:</h4>
        <ul class="sidebar__list">
            <li class="sidebar__list-item">
                <span class="list-item__dot" style="background-color: #0d6efd;"></span> Minhas Férias
            </li>
            <li class="sidebar__list-item">
                <span class="list-item__dot" style="background-color: #dc3545;"></span> Férias Empresa
            </li>
        </ul>

        <div style="margin-top: auto; padding-top: 20px;">
            <p class="text-muted" style="font-size: 0.85rem; line-height: 1.5;">
                • Clique num <strong>dia</strong> para marcar férias.<br>
                • Clique num <strong>evento azul</strong> para apagar.
            </p>
        </div>
    </aside>

    <section class="calendar__days">
        <div class="calendar__header">
            <button class="nav-btn" id="prevMonth" title="Mês Anterior">&lt;</button>
            <span class="month-title" id="monthDisplay">A carregar...</span>
            <button class="nav-btn" id="nextMonth" title="Mês Seguinte">&gt;</button>
        </div>

        <div class="calendar__top-bar">
            <span class="top-bar__days">Dom</span>
            <span class="top-bar__days">Seg</span>
            <span class="top-bar__days">Ter</span>
            <span class="top-bar__days">Qua</span>
            <span class="top-bar__days">Qui</span>
            <span class="top-bar__days">Sex</span>
            <span class="top-bar__days">Sáb</span>
        </div>

        <div class="calendar__grid" id="calendarGrid">
        </div>
    </section>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const grid = document.getElementById('calendarGrid');
            const monthDisplay = document.getElementById('monthDisplay');
            const diasRestantesEl = document.getElementById('dias-restantes');
            const btnPrev = document.getElementById('prevMonth');
            const btnNext = document.getElementById('nextMonth');
            const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;

            let currentDate = new Date(); // Data atual do calendário
            let events = []; // Eventos carregados

            // Helper para API
            async function fetchWithCreds(url, options = {}) {
                options.headers = { ...options.headers, 'RequestVerificationToken': antiForgeryToken, 'Content-Type': 'application/json' };
                return fetch(url, options);
            }

            // Carregar Dados da API
            async function carregarDados() {
                try {
                    const respSaldo = await fetchWithCreds('/api/ferias/diasrestantes');
                    if(respSaldo.ok) {
                        const data = await respSaldo.json();
                        diasRestantesEl.textContent = data.dias;
                    }
                } catch(e) {}

                const year = currentDate.getFullYear();
                const month = currentDate.getMonth();

                const firstDay = new Date(year, month, 1);
                const lastDay = new Date(year, month + 1, 0);

                // Pedimos um pouco mais (7 dias antes, 40 dias depois) para apanhar tudo
                const startStr = new Date(year, month, -7).toISOString().split('T')[0];
                const endStr = new Date(year, month, 40).toISOString().split('T')[0];

                try {
                    const respEvents = await fetchWithCreds(`/api/ferias/eventos?start=${startStr}&end=${endStr}`);
                    if(respEvents.ok) {
                        events = await respEvents.json();
                        renderCalendar();
                    }
                } catch(e) {
                    renderCalendar(); // Desenha o calendário vazio se a API falhar
                }
            }

            // Desenhar o Calendário
            function renderCalendar() {
                grid.innerHTML = '';

                const year = currentDate.getFullYear();
                const month = currentDate.getMonth();

                const monthName = new Intl.DateTimeFormat('pt-PT', { month: 'long', year: 'numeric' }).format(currentDate);
                monthDisplay.textContent = monthName.charAt(0).toUpperCase() + monthName.slice(1);

                const firstDayOfMonth = new Date(year, month, 1);
                const daysInMonth = new Date(year, month + 1, 0).getDate();
                const paddingDays = firstDayOfMonth.getDay();

                const prevMonthLastDay = new Date(year, month, 0).getDate();
                for(let i = paddingDays; i > 0; i--) {
                    const dayNum = prevMonthLastDay - i + 1;
                    const cell = document.createElement('div');
                    cell.classList.add('calendar__day', 'inactive');
                    cell.innerHTML = `<span class="calendar__date">${dayNum}</span>`;
                    grid.appendChild(cell);
                }

                const today = new Date();
                for(let i = 1; i <= daysInMonth; i++) {
                    const cell = document.createElement('div');
                    cell.classList.add('calendar__day');

                    if (i === today.getDate() && month === today.getMonth() && year === today.getFullYear()) {
                        cell.classList.add('today');
                    }

                    const currentDayDate = new Date(year, month, i);
                    const offset = currentDayDate.getTimezoneOffset();
                    const currentDayDateCorrected = new Date(currentDayDate.getTime() - (offset*60*1000));
                    const dateStr = currentDayDateCorrected.toISOString().split('T')[0];

                    cell.innerHTML = `<span class="calendar__date">${i}</span>`;

                    const dayEvents = events.filter(e => {
                        return dateStr >= e.start && dateStr < e.end;
                    });

                    dayEvents.forEach(evt => {
                        const task = document.createElement('div');
                        task.classList.add('calendar__task');
                        task.textContent = evt.title;

                        if (evt.color === '#dc3545') task.classList.add('task--empresa');
                        else task.classList.add('task--individual');

                        task.addEventListener('click', (e) => {
                            e.stopPropagation();
                            if (evt.editable) {
                                if(confirm(`Apagar férias de ${evt.title} (${dateStr})?`)) {
                                    apagarFerias(evt.id);
                                }
                            } else {
                                alert('Este registo não pode ser apagado (Empresa ou outro colega).');
                            }
                        });

                        cell.appendChild(task);
                    });

                    cell.addEventListener('click', () => {
                        if (confirm(`Marcar férias para o dia ${i} de ${monthName}?`)) {
                            marcarFerias(dateStr);
                        }
                    });

                    grid.appendChild(cell);
                }
            }

            async function marcarFerias(dateStr) {
                try {
                    const response = await fetchWithCreds('/api/ferias/marcar', {
                        method: 'POST',
                        body: JSON.stringify({ start: dateStr, end: dateStr })
                    });
                    const res = await response.json();
                    if(response.ok) {
                        carregarDados();
                    } else {
                        alert(res.message);
                    }
                } catch(e) { alert("Erro ao marcar."); }
            }

            async function apagarFerias(id) {
                try {
                    const response = await fetchWithCreds('/api/ferias/apagar', {
                        method: 'POST',
                        body: JSON.stringify({ id: id })
                    });
                    const res = await response.json();
                    if(response.ok) {
                        carregarDados();
                    } else {
                        alert(res.message);
                    }
                } catch(e) { alert("Erro ao apagar."); }
            }

            btnPrev.addEventListener('click', () => {
                currentDate.setMonth(currentDate.getMonth() - 1);
                carregarDados();
            });

            btnNext.addEventListener('click', () => {
                currentDate.setMonth(currentDate.getMonth() + 1);
                carregarDados();
            });

            carregarDados();
        });
    </script>
}