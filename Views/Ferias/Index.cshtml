@{
    ViewData["Title"] = "Calendário de Férias";
    Layout = "_LayoutCollaborator";
}
<form style="display: none;">@Html.AntiForgeryToken()</form>

@section Styles {
    <style>
        /* --- VARIÁVEIS DE CORES --- */
        :root {
            --black: #040605;
            --white: #f5f7f6;
            --blue-white: #e1e7e8;
            --pink: #fd588a;
            --tangerine: #f86a6c;
            --text-light: #888;
            --border-color: #eee;
        }

        /* --- ESTRUTURA PRINCIPAL --- */
        .calendar-contain {
            position: relative;
            width: 100%;
            background-color: var(--white);
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            min-height: 600px; /* Altura mínima garantida */
        }

        @@media (min-width: 55em) {
            .calendar-contain {
                flex-direction: row;
                height: 80vh; /* Altura fixa em desktop */
            }
        }

        /* --- BARRA LATERAL (SIDEBAR) --- */
        .calendar__sidebar {
            width: 100%;
            background: linear-gradient(120deg, #eff3f4, #e1e7e8);
            padding: 2rem;
            border-right: 1px solid #ddd;
        }

        @@media (min-width: 55em) {
            .calendar__sidebar {
                width: 30%;
                height: 100%;
                overflow-y: auto;
            }
        }

        .sidebar__heading {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1rem;
            color: var(--black);
            line-height: 1.2;
        }

            .sidebar__heading span {
                display: block;
                font-weight: 300;
                font-size: 1.1rem;
                color: var(--text-light);
                margin-top: 5px;
            }

        .info-bar {
            margin: 1.5rem 0;
            padding: 15px;
            background: white;
            border-radius: 8px;
            text-align: center;
            color: var(--black);
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .sidebar__list {
            list-style: none;
            padding: 0;
            margin-top: 2rem;
        }

        .sidebar__list-item {
            margin: 1rem 0;
            font-weight: 500;
            font-size: 0.95rem;
            color: #555;
            display: flex;
            align-items: center;
        }

        .list-item__dot {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 10px;
        }

        /* --- ÁREA DO CALENDÁRIO --- */
        .calendar__days {
            width: 100%;
            background: var(--white);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            flex: 1; /* Ocupa o resto do espaço */
        }

        @@media (min-width: 55em) {
            .calendar__days {
                width: 70%;
                height: 100%;
            }
        }

        /* Cabeçalho do Mês */
        .calendar__header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .month-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--black);
            text-transform: capitalize;
        }

        .nav-btn {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-light);
            padding: 0 15px;
            transition: color 0.2s;
        }

            .nav-btn:hover {
                color: var(--pink);
            }

        /* Dias da Semana */
        .calendar__top-bar {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            text-align: center;
            margin-bottom: 10px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--border-color);
        }

        .top-bar__days {
            color: var(--text-light);
            font-size: 0.85rem;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 1px;
        }

        /* Grelha dos Dias */
        .calendar__grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            /* CORREÇÃO CRÍTICA: minmax(80px, 1fr) garante altura mínima */
            grid-auto-rows: minmax(80px, 1fr);
            gap: 1px;
            background-color: var(--border-color);
            border: 1px solid var(--border-color);
            flex: 1; /* Força a grelha a crescer */
        }

        .calendar__day {
            background-color: var(--white);
            padding: 8px;
            display: flex;
            flex-direction: column;
            cursor: pointer;
            transition: background 0.2s;
            min-height: 80px; /* Garante que o dia aparece */
        }

            .calendar__day:hover {
                background-color: #f9f9f9;
            }

            .calendar__day.inactive {
                background-color: #fbfbfb;
                pointer-events: none; /* Não deixa clicar em dias do mês anterior/seguinte */
            }

            .calendar__day.today {
                background-color: #fff5f8;
            }

        .calendar__date {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--black);
            align-self: flex-end; /* Número no canto */
        }

        .calendar__day.inactive .calendar__date {
            color: #ddd;
        }

        .calendar__day.today .calendar__date {
            color: var(--pink);
        }

        /* Eventos */
        .calendar__task {
            font-size: 0.75rem;
            margin-bottom: 2px;
            padding: 2px 6px;
            border-radius: 4px;
            color: white;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            width: 100%;
        }

        .task--empresa {
            background-color: #dc3545;
        }

        .task--individual {
            background-color: #0d6efd;
        }

