<main class="calendar-contain">
    <aside class="calendar__sidebar">
        <h2 class="sidebar__heading">SIGHR <br><span>Gestão de Férias</span></h2>
        <div class="info-bar">Saldo Disponível: <strong id="dias-restantes" style="color: var(--pink); font-size: 1.2rem;">...</strong> dias</div>
        <h4 style="margin-top: 30px; font-size: 1rem; font-weight: 600; color: #555;">Legenda:</h4>
        <ul class="sidebar__list">
            <li class="sidebar__list-item"><span class="list-item__dot" style="background-color: #0d6efd;"></span> Minhas Férias</li>
            <li class="sidebar__list-item"><span class="list-item__dot" style="background-color: #dc3545;"></span> Férias Empresa</li>
        </ul>
        <div style="margin-top: auto; padding-top: 20px;">
            <p class="text-muted" style="font-size: 0.85rem; line-height: 1.5;">
                • Clique num <strong>dia</strong> para marcar férias.<br>
                • Clique num <strong>evento azul</strong> para apagar.
            </p>
        </div>
    </aside>
    <section class="calendar__days">
        <div class="calendar__header">
            <button class="nav-btn" id="prevMonth">&lt;</button>
            <span class="month-title" id="monthDisplay">A carregar...</span>
            <button class="nav-btn" id="nextMonth">&gt;</button>
        </div>
        <div class="calendar__top-bar">
            <span class="top-bar__days">Dom</span><span class="top-bar__days">Seg</span><span class="top-bar__days">Ter</span><span class="top-bar__days">Qua</span><span class="top-bar__days">Qui</span><span class="top-bar__days">Sex</span><span class="top-bar__days">Sáb</span>
        </div>
        <div class="calendar__grid" id="calendarGrid"></div>
    </section>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const grid = document.getElementById('calendarGrid');
            const monthDisplay = document.getElementById('monthDisplay');
            const diasRestantesEl = document.getElementById('dias-restantes');
            const btnPrev = document.getElementById('prevMonth');
            const btnNext = document.getElementById('nextMonth');
            const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;

            let currentDate = new Date();
            let events = [];

            async function fetchWithCreds(url, options = {}) {
                options.headers = { ...options.headers, 'RequestVerificationToken': antiForgeryToken, 'Content-Type': 'application/json' };
                return fetch(url, options);
            }

            async function carregarDados() {
                try {
                    const respSaldo = await fetchWithCreds('/api/ferias/diasrestantes');
                    if(respSaldo.ok) { const data = await respSaldo.json(); diasRestantesEl.textContent = data.dias; }
                } catch(e) {}

                const year = currentDate.getFullYear();
                const month = currentDate.getMonth();
                const startStr = new Date(year, month, -7).toISOString().split('T')[0];
                const endStr = new Date(year, month, 40).toISOString().split('T')[0];

                try {
                    const respEvents = await fetchWithCreds(`/api/ferias/eventos?start=${startStr}&end=${endStr}`);
                    if(respEvents.ok) {
                        events = await respEvents.json();
                        renderCalendar();
                    }
                } catch(e) { console.error(e); renderCalendar(); }
            }

            function renderCalendar() {
                grid.innerHTML = '';
                const year = currentDate.getFullYear();
                const month = currentDate.getMonth();
                const monthName = new Intl.DateTimeFormat('pt-PT', { month: 'long', year: 'numeric' }).format(currentDate);
                monthDisplay.textContent = monthName.charAt(0).toUpperCase() + monthName.slice(1);

                const firstDayOfMonth = new Date(year, month, 1);
                const daysInMonth = new Date(year, month + 1, 0).getDate();
                const paddingDays = firstDayOfMonth.getDay();

                const prevMonthLastDay = new Date(year, month, 0).getDate();
                for(let i = paddingDays; i > 0; i--) {
                    const dayNum = prevMonthLastDay - i + 1;
                    const cell = document.createElement('div');
                    cell.classList.add('calendar__day', 'inactive');
                    cell.innerHTML = `<span class="calendar__date">${dayNum}</span>`;
                    grid.appendChild(cell);
                }

                const today = new Date();
                for(let i = 1; i <= daysInMonth; i++) {
                    const cell = document.createElement('div');
                    cell.classList.add('calendar__day');
                    if (i === today.getDate() && month === today.getMonth() && year === today.getFullYear()) cell.classList.add('today');

                    const currentDayDate = new Date(year, month, i);
                    const offset = currentDayDate.getTimezoneOffset();
                    const currentDayDateCorrected = new Date(currentDayDate.getTime() - (offset*60*1000));
                    const dateStr = currentDayDateCorrected.toISOString().split('T')[0];

                    cell.innerHTML = `<span class="calendar__date">${i}</span>`;

                    const dayEvents = events.filter(e => dateStr >= e.start && dateStr < e.end);

                    dayEvents.forEach(evt => {
                        const task = document.createElement('div');
                        task.classList.add('calendar__task');
                        task.textContent = evt.title;
                        if (evt.color === '#dc3545') task.classList.add('task--empresa');
                        else task.classList.add('task--individual');

                        // CLICK NO EVENTO
                        task.addEventListener('click', (e) => {
                            e.stopPropagation();
                            // AQUI: Verificamos a propriedade 'editable' que vem da API
                            if (evt.editable) {
                                if(confirm(`Apagar férias de ${evt.title}?`)) {
                                    apagarFerias(evt.id);
                                }
                            } else {
                                alert('Este registo não pode ser apagado (Empresa ou outro colega).');
                            }
                        });
                        cell.appendChild(task);
                    });

                    cell.addEventListener('click', () => {
                        if (confirm(`Marcar férias para o dia ${i}?`)) marcarFerias(dateStr);
                    });
                    grid.appendChild(cell);
                }
            }

            async function marcarFerias(dateStr) {
                try {
                    const response = await fetchWithCreds('/api/ferias/marcar', { method: 'POST', body: JSON.stringify({ start: dateStr, end: dateStr }) });
                    if(response.ok) carregarDados(); else { const res = await response.json(); alert(res.message); }
                } catch(e) { alert("Erro ao marcar."); }
            }

            async function apagarFerias(id) {
                try {
                    const response = await fetchWithCreds('/api/ferias/apagar', { method: 'POST', body: JSON.stringify({ id: id }) });
                    if(response.ok) carregarDados(); else { const res = await response.json(); alert(res.message); }
                } catch(e) { alert("Erro ao apagar."); }
            }

            btnPrev.addEventListener('click', () => { currentDate.setMonth(currentDate.getMonth() - 1); carregarDados(); });
            btnNext.addEventListener('click', () => { currentDate.setMonth(currentDate.getMonth() + 1); carregarDados(); });

            carregarDados();
        });
    </script>
}